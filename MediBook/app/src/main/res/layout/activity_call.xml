<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gsvasir.pro.Call"
    android:background="@drawable/hospital"
    android:gravity="top">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#9d2d1663"
        android:orientation="vertical">
        <EditText android:id="@+id/inputSearch"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/s"
            android:singleLine="true"
            android:hint="Select To Contact The Hospital"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textColor="#060606"
            android:textColorHint="#3d0808"
            android:inputType="text"/>

        <ListView
            android:id="@+id/list_view"
            android:layout_width="wrap_content"
            android:layout_height="400sp"
            android:contextClickable="true"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#58b60d0f"
        android:gravity="center">
        <Button
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOCATE ON MAP"
            android:gravity="center"
            android:drawableLeft="@drawable/map"
            android:textSize="25dp"
            android:id="@+id/map"
            android:background="#aac67e2c"
            android:textColor="#e2db11"
            android:layout_marginBottom="5dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/appoint"
            android:text="BOOK YOUR APPOINTMENT"
            android:textSize="25dp"
            android:background="#aac67e2c"
            android:textColor="#e2db11"
            android:id="@+id/book"
            android:layout_below="@+id/map"
            android:textStyle="italic"/>


    </RelativeLayout>


</LinearLayout>