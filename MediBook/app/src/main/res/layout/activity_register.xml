<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bc"
    tools:context="com.gsvasir.pro.Register">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full Name:"
        android:textSize="25dp"
        android:layout_marginTop="15sp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et1"
        android:singleLine="true"
        android:ems="15"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Number:"
        android:textSize="25dp"
        android:layout_below="@+id/et1"
        android:layout_marginTop="15sp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:singleLine="true"
        android:ems="15"
        android:id="@+id/et3"
        android:layout_below="@+id/et1"
        android:layout_marginTop="30dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email ID:"
        android:textSize="25dp"
        android:layout_below="@+id/et3"
        android:layout_marginTop="15sp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="15"
        android:singleLine="true"
        android:id="@+id/et4"
        android:layout_below="@+id/et3"
        android:layout_marginTop="30dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personal Address:"
        android:textSize="25dp"
        android:layout_below="@+id/et4"
        android:layout_marginTop="15sp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="15"
        android:singleLine="true"
        android:id="@+id/et5"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/et4"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password:"
        android:textSize="25dp"
        android:layout_below="@+id/et5"
        android:layout_marginTop="15sp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="15"
        android:id="@+id/et6"
        android:singleLine="true"
        android:layout_below="@+id/et5"
        android:layout_marginTop="30dp"/>
    <Button
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="register"
        android:id="@+id/bt2"
        android:layout_below="@+id/et6"
        android:background="#cc2e7aa6"
        android:layout_marginTop="25dp"
        android:layout_marginRight="1dp"/>
    <Button
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/back"
        android:layout_toRightOf="@+id/bt2"
        android:layout_below="@+id/et6"
        android:background="#cc2e7aa6"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="1dp"/>
</RelativeLayout>
